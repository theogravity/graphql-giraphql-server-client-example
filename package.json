    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:coverage:watch": "NODE_ENV=test jest --coverage --watch",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint": "yarn lint:fix && eslint 'src/**/*.ts'"
