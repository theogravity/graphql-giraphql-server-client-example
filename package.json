{
  "name": "giraphql-server",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sequelize": "sequelize",
    "dev": "ts-node-dev --respawn -- src/",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "tsc && cp -R src/config dist/",
    "test:unit": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --ci --coverage",
    "test:coverage:watch": "NODE_ENV=test jest --coverage --watch",
    "test:integration": "NODE_ENV=test yarn generate && jest --config integration-tests/jest.config.js --force-exit",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint": "yarn lint:fix && eslint 'src/**/*.ts'",
    "generate": "ts-node-dev bin/generate-gql-schema.ts && graphql-codegen"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "license": "MIT",
  "dependencies": {
    "@giraphql/core": "^2.23.0",
    "@giraphql/plugin-directives": "^2.11.0",
    "@giraphql/plugin-simple-objects": "^2.13.0",
    "@graphql-tools/utils": "^8.6.1",
    "apollo-datasource": "^3.3.0",
    "apollo-server-express": "^3.6.1",
    "dataloader-sequelize": "^2.3.3",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.5.5",
    "nanoid": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.13.0",
    "sequelize-typescript": "^2.1.2",
    "sqlite3": "^5.0.2",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.1",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-graphql-request": "^4.3.3",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/validator": "^13.7.1",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.4.7",
    "jest-cli": "^27.4.7",
    "lint-staged": "^12.1.7",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.4.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "pre-commit": [
    "lint-staged",
    "test:ci",
    "build"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
